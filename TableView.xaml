<UserControl x:Class="RestaurantManagement.Views.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Dãy nút chức năng -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="➕ Thêm bàn" Width="85" FontSize="13" Margin="4"/>
            <Button Content="✏️ Sửa bàn" Width="85" FontSize="13" Margin="4"/>
            <Button Content="🗑️ Xóa bàn" Width="80" FontSize="13" Margin="5"/>
            <Button Content="🔄 Trạng thái" Margin="5" Padding="10,5"/>
            <Button Content="🔍 Tìm kiếm bàn" Margin="5" Padding="10,5"/>
            <Button Content="📅 Đặt bàn" Margin="5" Padding="10,5"/>
        </StackPanel>

        <!-- Luôn hiển thị danh sách bàn bên dưới -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding BanAnList}"
                  AutoGenerateColumns="True"
                  SelectedItem="{Binding SelectedBan}"
                  Margin="0"
                  IsReadOnly="True"/>
    </Grid>
</UserControl>
