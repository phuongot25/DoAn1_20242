<UserControl x:Class="RestaurantManagement.Views.RevenueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Nút -->
            <RowDefinition Height="*"/>
            <!-- Báo cáo -->
        </Grid.RowDefinitions>

        <!-- Thanh nút chức năng -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="🧮 Tính doanh thu" Margin="5" Padding="10,5"/>
            <Button Content="📊 Thống kê doanh thu" Margin="5" Padding="10,5"/>
        </StackPanel>

        <!-- Khu vực hiển thị báo cáo -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Padding="10">
            
        </Border>
    </Grid>
</UserControl>
